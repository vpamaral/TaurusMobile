<?xml version="1.0" encoding="UTF-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.taurusmobile.ui"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_taurus"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="jim.h.common.android.zxinglib.CaptureActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:windowSoftInputMode="stateAlwaysHidden" />
        
        <activity
            android:name=".LeitorQRCodeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ConfiguracoesQRCodeActivity"
            android:label="@string/title_activity_configuracoes" />
        
        <activity
            android:name=".MenuPrincipalActivity"
            android:label="@string/app_name" />
        
        <activity
            android:name=".ListaAnimaisActivity"
            android:label="@string/title_activity_lista_animais" />
        
        <activity
            android:name=".PartoActivity"
            android:label="@string/title_activity_parto" />
        
        <activity
            android:name=".EnviarActivity"
            android:label="@string/title_activity_enviar" />
        
        <activity
            android:name=".ListaPartosCriaActivity"
            android:label="@string/title_activity_lista_partos" />
        
    </application>

</manifest>
