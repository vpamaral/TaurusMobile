<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.taurusmobile.ui"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_taurus"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        
         >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListaAnimaisActivity"
            android:label="@string/title_activity_lista_animais" >
        </activity>
        <activity
            android:name=".PartoActivity"
            android:label="@string/title_activity_parto" >
        </activity>
        <activity
            android:name=".EnviarActivity"
            android:label="@string/title_activity_enviar" >
        </activity>
    </application>

</manifest>
