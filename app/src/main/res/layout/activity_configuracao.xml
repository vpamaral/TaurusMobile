<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="br.com.prodap.taurusmobile.ui.MenuPrincipalActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
         
       <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Endereco:            "
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtEndereco"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:enabled="false"/>

        <Button
            android:id="@+id/btnLeitorQRCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selector"
            android:drawableLeft="@drawable/cod_barras"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Leitor de QRCode"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autoriza Identificador: "
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spnIdentificador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autoriza Grupo Manejo: "
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spnManejo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        
         <Button
            android:id="@+id/btn_salvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_selector"
            android:drawableLeft="@drawable/atualiza32"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Atualizar"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
        
    </LinearLayout>

</ScrollView>