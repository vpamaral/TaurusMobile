<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Lista_Animais_Activity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bootstrap_brand_secondary_border"
        android:padding="0dp"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spnSexoFiltro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0" />

            <Button
                android:id="@+id/btnSalvarParto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_margin="4dp"
                android:background="@color/bootstrap_brand_success"
                android:onClick="btn_filtro_Click"
                android:text="Filtrar"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <!--
            <Button
